<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_new_hot_game"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/player_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_new_hot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/m4399_png_crack_game_carouse_bg"
            app:layout_constraintBottom_toBottomOf="@+id/cl_new_hot_game"
            app:layout_constraintStart_toStartOf="@+id/cl_new_hot_game"
            app:layout_constraintTop_toTopOf="@+id/cl_new_hot_game" />

        <TextView
            android:id="@+id/tv_hot_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="hhhhh"
            android:textColor="#d9000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_new_hot"
            app:layout_constraintTop_toTopOf="@+id/iv_new_hot" />

        <TextView
            android:id="@+id/tv_hot_game_inf"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="jjjjjj"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_hot_game_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_hot_game_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>