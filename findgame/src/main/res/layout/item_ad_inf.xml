<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/csl_ad_game"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/ad_type"
        android:layout_width="32dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/m4399_png_shop_theme_new_flag"
        />
    <TextView
        android:id="@+id/ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ad_type"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#d9000000"
        tool:text="游戏天天玩"
        />
    
    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ad_type"
        app:layout_constraintStart_toStartOf="@+id/ad_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/m4399_png_crack_game_carouse_bg"
        />
    <TextView
        android:id="@+id/ad_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ad_image"
        app:layout_constraintStart_toStartOf="@+id/ad_type"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="#80000000"
        tool:text="游戏天天玩，好玩乐翻天"
        />

</androidx.constraintlayout.widget.ConstraintLayout>