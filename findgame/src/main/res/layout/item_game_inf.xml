<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/csl_game_inf"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/game_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tool:text="部落冲突"
        android:textColor="#d9000000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@+id/game_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/game_video"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/m4399_png_gamecircle_icon_post_video_nor"
        app:layout_constraintStart_toStartOf="@+id/game_name"
        app:layout_constraintTop_toBottomOf="@+id/game_name"
        />
    <TextView
        android:id="@+id/game_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        tool:text="10w+下载"
        android:layout_marginStart="8dp"
        android:textColor="#80000000"
        app:layout_constraintStart_toEndOf="@+id/game_video"
        app:layout_constraintTop_toBottomOf="@+id/game_name"
        />
    <TextView
        android:id="@+id/game_inf_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/game_video"
        app:layout_constraintStart_toStartOf="@+id/game_video"
        android:textColor="#80000000"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textSize="13sp"
        tool:text="3D魔幻动作手游"
        />
    <Button
        android:id="@+id/bt_download"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:background="@color/head_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_img"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/download"/>

</androidx.constraintlayout.widget.ConstraintLayout>