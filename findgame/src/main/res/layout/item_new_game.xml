<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_game"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="周二"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_weekday"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="7.7正式上线"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/new_game_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/m4399_png_crack_game_carouse_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_time"/>
    <TextView
        android:id="@+id/new_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_icon"
        android:textColor="#000000"
        android:gravity="center"
        android:text="剑侠世界"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>